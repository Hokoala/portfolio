---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
---

<RootLayout>
	<main>
		<div class="group relative w-full min-h-screen flex items-center justify-center">
			<div class="absolute w-full h-full sm:min-h-screen -z-10">
				<WarpBackground
					color1="#4b607f"
					color2="#e8d8c9"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<div class="p-4 sm:p-8 absolute w-full flex flex-col justify-between min-h-screen z-10">
				<div>
					<H1 size="large"> Jean Michel <br /> LE </H1>
				</div>

				<div>
					<AvailableForWork className="py-4" />
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="https://www.linkedin.com/in/jean-michel-le/overlay/1739270758222/single-media-viewer/?profileId=ACoAAEEs1jkB8oZaJ4BYEcU53ccQb6FeJdpMZfE">CV</Link>
							<Link href="/projects" variant="secondary">Voir mes projects</Link>
						</div>

						<Navigation client:load>
							<Link href="/public_html_V1/index.html" variant="secondary">Version 1</Link>
							<Link href="/blog" variant="secondary">Éxperience</Link>
							<Link href="/about" variant="secondary">À propos</Link>
							<Link href="/contact" variant="secondary">Contact</Link>
					
						</Navigation>
					</div>
				</div>
			</div>
		</div>
	</main>
</RootLayout>
